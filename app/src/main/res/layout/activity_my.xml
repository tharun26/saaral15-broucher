

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"

    android:descendantFocusability="blocksDescendants"
    android:paddingTop="15dp"

    android:background="@drawable/home_background_selector"
    android:alpha=".9">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">




    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"

        android:paddingLeft="15dp"

        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"

        android:background="@drawable/home_background_selector">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card"
            android:alpha=".8"
            android:src="@drawable/rotract_international"
            />




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/events"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_below="@+id/layout"
        android:paddingTop="10dp"
        android:background="@drawable/home_background_selector"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/events_btn"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/party1"
            android:background="@drawable/home_background_selector"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="EVENTS"
            android:textStyle="bold"
            android:alpha=".7"
            android:background="@drawable/home_background_selector"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/updates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/events"
        android:background="@drawable/home_background_selector"
        android:padding="10dp"
         >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="UPDATES"
            android:textStyle="bold"
            android:alpha=".7"
            android:textColor="@color/abc_primary_text_material_light"
            android:background="@drawable/home_background_selector"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ListView
            android:layout_below="@+id/textView3"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/home_background_selector"
            android:background="@drawable/home_background_selector">
            </ListView>

        </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="100dp"
            android:background="@drawable/home_background_selector"
           android:layout_below="@id/updates"
           >
            <ImageButton
                android:id="@+id/contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phone"
                android:padding="15dp"
                android:alpha="1"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/textView"
                android:layout_alignEnd="@+id/textView" />
           <ImageButton
               android:id="@+id/i2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:padding="15dp"

               android:src="@drawable/atom"
               android:background="@null"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true" />
           <ImageButton
               android:id="@+id/i3"
               android:padding="15dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="50dp"
               android:background="@null"
               android:src="@drawable/id"
               android:layout_alignTop="@+id/i2"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:text="Contacts"
               android:id="@+id/textView"
               android:layout_alignParentBottom="true"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:text="Sponsors"
               android:id="@+id/textView4"
               android:layout_alignTop="@+id/textView"
               android:layout_centerHorizontal="true" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:text="Developers"
               android:id="@+id/textView5"
               android:layout_alignTop="@+id/textView4"
               android:layout_alignRight="@+id/i3"
               android:layout_alignEnd="@+id/i3" />


       </RelativeLayout>
    </RelativeLayout>
</ScrollView>

</RelativeLayout>
